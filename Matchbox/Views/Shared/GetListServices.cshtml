@model List<Matchbox.ViewModels.ServicioViewModel>

@{
    ViewData["Title"] = "Servicios";
}

<style>
    .limitedText_50 {
        overflow: hidden;
        max-width: 50ch;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

<div class="border-button">
    <h1>
        Servicios
    </h1>
</div>

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var servicio in Model)
        {
            <div class="col-12 col-sm-6 col-lg-4 p-2">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title mb-5">@servicio.Nombre </h3>
                        <p class="card-text limitedText_1000">@servicio.Descripcion</p>
                        <a href="@servicio.Id" class="btn btn-primary">VER</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No se encontraron servicios disponibles...</p>
}
